{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "types": ["node"],
        "rootDir": "..",
        "baseUrl": ".",
        "paths": { "@types/*": ["../types/*"], "@types": ["../types/index.ts"] },
        "typeRoots": ["node_modules/@types", "../types"]
    },
    "exclude": ["node_modules"],
    "include": ["./**/*", "../types/**/*"]
}
